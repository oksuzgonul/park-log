<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tracking_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currently_not_tracked"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/list_car_name"
        app:layout_constraintTop_toBottomOf="@id/tracking_status"
        app:layout_constraintStart_toStartOf="@id/tracking_status"
        android:layout_marginTop="4dp"
        android:layout_marginStart="0dp"
        tools:text="Honda CRV"
        android:textSize="28sp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/car_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_car"
        app:layout_constraintTop_toBottomOf="@id/list_car_name"
        app:layout_constraintStart_toStartOf="@id/list_car_name"
        android:layout_marginTop="4dp"
        android:layout_marginStart="0dp"/>
    <TextView
        android:id="@+id/list_car_owner"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/list_car_name"
        app:layout_constraintStart_toEndOf="@id/car_icon"
        android:layout_marginTop="6dp"
        android:layout_marginStart="2dp"
        tools:text="Belongs to John Doe"/>
    <ImageView
        android:id="@+id/park_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tracking_status"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_red_park"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>